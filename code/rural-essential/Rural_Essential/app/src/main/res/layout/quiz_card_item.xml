<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/quiz_card_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="2dp"
        android:translationZ="5dp"
        app:cardCornerRadius="10dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="10"
            android:columnCount="1"
            android:background="@color/colorLightBlue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:background="@color/colorDarkLightBlue"
                android:text="@string/question"
                android:textColor="@android:color/black"
                android:textSize="10pt"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/question_description_ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:textSize="8pt"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:background="@color/colorDarkLightBlue"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:textColor="@android:color/black"
                android:text="  Chosen answer"
                android:textSize="10pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:textColor="@android:color/black"
                android:textSize="8pt"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAlignment="viewStart"
                android:id="@+id/answer_a_ListView"
                android:textAllCaps="false"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:textColor="@android:color/black"
                android:textSize="8pt"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAlignment="viewStart"
                android:id="@+id/answer_b_ListView"
                android:textAllCaps="false"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:textColor="@android:color/black"
                android:textSize="8pt"
                 android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAlignment="viewStart"
                android:id="@+id/answer_c_ListView"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:textColor="@android:color/black"
                android:textSize="8pt"
                android:id="@+id/correct_or_wrong_ListView"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:textColor="@android:color/black"
                android:textSize="8pt"
                android:id="@+id/correct_answer_ListView"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

            </TextView>
        </GridLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>